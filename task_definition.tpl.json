[
  {
    "name": "sigsci-agent",
    "image": "signalsciences/sigsci-agent:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${logs_name}",
        "awslogs-group": "${logs_name}"
      }
    },
    "environment": [
      {
        "name": "SIGSCI_ACCESSKEYID",
        "value": "${agent_key}"
      },
      {
        "name": "SIGSCI_SECRETACCESSKEY",
        "value": "${agent_secret}"
      },
      { 
        "name": "SIGSCI_REVPROXY_LISTENER",
        "value": "http:{listener='http://0.0.0.0:80',upstreams='http://httpbin.org:80',access-log='/dev/stdout'}"
      }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "softLimit": 65335,
        "hardLimit": 65335
      }
    ],
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "cpu": 256,
    "memory": 512
  }
]